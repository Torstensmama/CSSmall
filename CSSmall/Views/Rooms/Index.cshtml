                    <strong>Total: 4950 SEK</strong>
                </div>
                <button class="book-button">Boka</button>
                <a href="@Url.Action("DetailsSvit", "Rooms")" class="info-button">Mer information</a>


            </div>
        
        </div>

        </div>

    </section>

    <!-- Lägg till JavaScript-koden för tabbväxling -->
    <script>
        function showTab(event, tabId) {
            // Dölj alla tabbar
            let tabs = document.querySelectorAll(".tab-content");
            tabs.forEach(tab => tab.classList.remove("active"));

            // Ta bort "active" från alla knappar
            let tabButtons = document.querySelectorAll(".tab-item");
            tabButtons.forEach(button => button.classList.remove("active"));

            // Visa rätt innehåll
            document.getElementById(tabId).classList.add("active");
            event.currentTarget.classList.add("active");
        }
    </script>
</body>

